#refractive index
nTHz = 3.6
nRF = 3.8

#modulation frequency THz
modF = 0.0141

#modulation amplitude unit: V
modA = 1


#initial bias value! in kV/cm
bias = 9

#boundary voltage value! in V
Vs = 8.6

