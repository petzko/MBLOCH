Zin = 50

#initial current value (A/mm) 
current = 7.2870

# section 1 width height and legnth in mm 
width = 60e-3
height = 10e-3 
length = 3


#pure dephasing  time for the inj -> ull transition[ps]
Tdeph_13 =  0.4
